{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "theme",
          "custom-variant",
          "layer",
          "config"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "theme",
          "custom-variant",
          "layer",
          "config"
        ]
      }
    ],
    "no-descending-specificity": null
  },
  "ignoreFiles": ["node_modules/**/*", ".next/**/*", "build/**/*"]
}
